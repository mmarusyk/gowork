<li id="order-<%= order.id %>" class="order">
<div class="gravatar-div">
  <%= link_to gravatar_for(order.user, size: 80), order.user %>
  <span class="user">
    <%= link_to "#{order.user.first_name} #{order.user.last_name}", order.user %>
  </span> 
</div>
<div class="text">
  <span class="title">
    <%= link_to order.title, order %>
  </span>
  <span class="city"> 
    <b>Місто:</b> <%= order.city %>
  </span>
  <span class="timestamp"> 
    <b>Створено:</b> <%= order.created_at %>
  </span>
  <span class="timestamp"> 
    <b>Завершується:</b> <%= order.duedate %>
  </span>
</div>
<% if current_user?(order.user) %> 
<div class="buttons">
  <%= link_to "Видалити", order, method: :delete, data: { confirm: "Ти впевнений?" }, class: "btn btn-danger" %> <%end%>
</div>
</li> 