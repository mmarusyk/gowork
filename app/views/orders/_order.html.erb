<li id="order-<%= order.id %>" class="item">
  <div class="row">
    <div class="col-md-2">
      <div class="gravatar-div">
        <%= link_to gravatar_for(order.user, size: 80), order.user %>
        <span class="user">
          <%= link_to "#{order.user.first_name} #{order.user.last_name}", order.user %>
        </span> 
      </div>
    </div>
    <div class="col-md-8">
      <div class="text">
        <span class="title">
          <%= link_to order.title, order %>
        </span>
        <span class="city"> 
          <b>Місто:</b> <%= order.city %>
        </span>
        <span class="timestamp"> 
          <b>Створено:</b> <%= order.created_at %>
        </span>
        <span class="timestamp"> 
          <b>Завершується:</b> <%= order.duedate %>
        </span>
        <span class="category">
          <b>Категорія:</b> <%= order.category.title %>
        </span>
      </div>
    </div>
    <div class="col-md-2">
      <div class="buttons">
        <% if  current_user && (current_user?(order.user) || current_user.admin?) %> 
          <%= link_to "Видалити", order, method: :delete, data: { confirm: "Ти впевнений?" }, class: "btn btn-danger" %>
          <%= link_to "Редагувати", edit_order_path(order.id), class: "btn btn-warning" %>
        <%end%>
        <% if current_user && !(current_user?(order.user)) %> 
          <%= link_to "Подати заявку", '#', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</li> 