<% provide(:title, "#{@order.title}")%>

<div class="order-more">
  <div class="row">
    <div class="col-md-8 col-sm-8">
      <span class="title">
        <%= @order.title %>
      </span>
    </div>
    <div class="col-md-4 col-sm-4">
      <span class="price">
        <%= @order.price %> ₴
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="data">
        <div class="labell">
          Опис
        </div>
        <div class="description">
          <%= @order.description %>
        </div>
        <div class="labell">
          Навички
        </div>
        <div class="skills">
          <%= @order.skills %>
        </div>
      </div>
      <div class="extended-data">
        <span class="item"> 
          <b>Місто:</b> <%= @order.city %>
        </span>
        <span class="item"> 
          <b>Створено:</b> <%= @order.created_at %>
        </span>
        <span class="item"> 
          <b>Завершується:</b> <%= @order.duedate %>
        </span>
      </div>
    </div>
  </div>
      
    </div>
    <div class="menu">
      <% if current_user?(@order.user) || current_user.admin? %> 
      <div class="buttons">
        <%= link_to "Видалити", @order, method: :delete, data: { confirm: "Ти впевнений?" }, class: "btn btn-danger" %>
        <%= link_to "Редагувати", edit_order_path, class: "btn btn-warning" %>
      </div>
        <%end%>
    </div>
</div>